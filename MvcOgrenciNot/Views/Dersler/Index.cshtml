@using MvcOgrenciNot.Models.Entity;
@model List<Dersler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<h2>Ders Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Ders ID</th>
        <th>Ders Adı</th>
        <th>Ders Sil</th>
        <th>Ders Güncelle</th>
    </tr>
    @foreach (var drs in Model)
    {
        <tr>
            <th>@drs.DersID</th>
            <td>@drs.DersAD</td>
            <td><a href="/Dersler/DersSil/@drs.DersID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Dersler/DersGetir/@drs.DersID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Dersler/DersEkle/" class="btn btn-primary">Yeni Ders Ekle</a>
