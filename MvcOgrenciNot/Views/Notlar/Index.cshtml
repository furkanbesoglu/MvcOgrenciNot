@using MvcOgrenciNot.Models.Entity;
@model List<Notlar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<h2>Öğrenciler Not Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Not ID</th>
        <th>Ders Adı</th>
        <th>Öğrenci Adı</th>
        <th>Sınav 1</th>
        <th>Sınav 2</th>
        <th>Sınav 3</th>
        <th>Proje</th>
        <th>Ortalama</th>
        <th>Durum</th>
        <th>Not Güncelle</th>
    </tr>
    @foreach (var not in Model)
    {
        <tr>
            <th>@not.NotID</th>
            <td>@not.Dersler.DersAD</td>
            <td>@not.Ogrenciler.OgrenciAD</td>
            <td>@not.Sinav1</td>
            <td>@not.Sinav2</td>
            <td>@not.Sinav3</td>
            <td>@not.Proje</td>
            <td>@not.Ortalama</td>
            <td>@not.Durum</td>
            <td><a href="/Notlar/NotGetir/@not.NotID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Notlar/YeniSinav/" class="btn btn-primary">Yeni Not Oluştur</a>
